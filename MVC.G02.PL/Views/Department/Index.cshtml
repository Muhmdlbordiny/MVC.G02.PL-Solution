@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
<h1 style="color:cornflowerblue">ALL Department</h1>
<br />
<br />
<a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create Department</a>
<br />
<br />
@if (Model.Count() > 0)
{
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th style="background-color:blue">@Html.DisplayNameFor(D=>D.Code)</th>
            <th style ="background-color:crimson">@Html.DisplayNameFor(D=>D.Name)</th>
            <th style="background-color:blueviolet">@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
            <th style="background-color:brown">Update</th>
            <th style="background-color:darkgoldenrod">Details</th>
            <th style="background-color:darkred" >Delete</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var department in Model)
        {
            <tr style="background-color:coral">
                <td style="background-color:darkorange">@department.Code</td>
                <td style="background-color:greenyellow">@department.Name</td>
                <td style="background-color:lightseagreen">@department.DateOfCreation </td>
                    <partial name="_Buttonpartialviews"model="@department.Id" />
            </tr>

        }
    </tbody>
</table>
    
}
else
{
    <div class="alert alert-danger">
        <h4>Try Enter your Department Please</h4>
    </div>
}
